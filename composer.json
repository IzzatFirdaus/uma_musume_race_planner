{
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.86",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "*",
        "symfony/console": "^6.0 || ^7.0",       
        "symfony/var-dumper": "^6.0 || ^7.0",    
        "symfony/filesystem": "^6.0 || ^7.0",    
        "symfony/finder": "^6.0 || ^7.0",        
        "symfony/process": "^6.0 || ^7.0",       
        "symfony/event-dispatcher": "^6.0 || ^7.0", 
        "symfony/options-resolver": "^6.0 || ^7.0", 
        "symfony/string": "^6.0 || ^7.0",        
        "symfony/polyfill-mbstring": "^1.23",    
        "symfony/polyfill-intl-grapheme": "^1.23",
        "symfony/polyfill-php80": "^1.23",       
        "symfony/polyfill-php81": "^1.23",       
        "phpunit/phpunit": "^9.5 || ^10.0"       
    },
    "require": {
        "monolog/monolog": "^3.9"
    },
    "scripts": {
        "cs:fix": "php-cs-fixer fix --ansi --config=.php-cs-fixer.php",
        "cs:check": "phpcs --standard=PSR12 . components/",
        "analyse": "phpstan analyse --ansi --no-progress --configuration=phpstan.neon . components/"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
