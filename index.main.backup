    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // DOM elements
        const newPlanBtn = document.getElementById('newPlanBtn');
        const createPlanBtn = document.getElementById('createPlanBtn');
        const planModal = new bootstrap.Modal(document.getElementById('planModal'));
        const planCards = document.querySelectorAll('.plan-card');
        const planDetails = document.getElementById('planDetails');
        const closeDetailsBtn = document.getElementById('closeDetailsBtn');
        
        // Event Listeners
        newPlanBtn.addEventListener('click', () => {
            document.getElementById('modalTitle').textContent = 'Create New Plan';
            planModal.show();
        });
        
        createPlanBtn.addEventListener('click', () => {
            document.getElementById('modalTitle').textContent = 'Create New Plan';
            planModal.show();
        });
        
        planCards.forEach(card => {
            card.addEventListener('click', (e) => {
                if(!e.target.closest('button')) {
                    const planId = card.getAttribute('data-id');
                    loadPlanDetails(planId);
                    planDetails.style.display = 'block';
                    card.classList.add('table-active');
                }
            });
        });
        
        closeDetailsBtn.addEventListener('click', () => {
            planDetails.style.display = 'none';
            document.querySelector('.table-active')?.classList.remove('table-active');
        });
        
        // Load plan details
        function loadPlanDetails(planId) {
            const detailsBody = document.querySelector('#planDetails .card-body');
            
            // This would be replaced with actual data from backend in a real app
            let content = '';
            
            if(planId === '1') {
                content = `
                    <h4 class="mb-4">[Bestest Prize] Haru Urara - URA Finale Qualifier</h4>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header">Trainee Info</div>
                                <div class="card-body">
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <div class="text-muted">Career Stage</div>
                                            <div class="fw-bold">Finale Season</div>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-muted">Class</div>
                                            <div class="fw-bold"><span class="badge bg-secondary">SILVER</span></div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="text-muted">Mood</div>
                                            <div class="fw-bold text-success">Good</div>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-muted">Energy</div>
                                            <div class="fw-bold">20/100%</div>
                                            <div class="energy-bar mt-1">
                                                <div class="energy-fill" style="width: 20%;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="card mb-4">
