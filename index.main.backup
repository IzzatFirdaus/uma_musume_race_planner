                                <p class="mb-0 text-muted">URA Finale Finals</p>
                                <small class="text-muted">3 days ago</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Plan Modal -->
    <div class="modal fade" id="planModal" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Create New Plan</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="planForm">
                        <input type="hidden" id="planId">
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-header">Trainee Info</div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label class="form-label">Trainee Name</label>
                                            <input type="text" class="form-control" id="modalName" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Career Stage</label>
                                            <select class="form-select" id="modalCareerStage" required>
                                                <option value="junior">Junior Year</option>
                                                <option value="predebut">Pre-Debut</option>
                                                <option value="debut">Debut</option>
                                                <option value="finale">Finale Season</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Class</label>
                                            <select class="form-select" id="modalClass" required>
                                                <option value="silver">Silver</option>
                                                <option value="gold">Gold</option>
                                                <option value="star">Star</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="card mb-3">
                                    <div class="card-header">Race Info</div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label class="form-label">Race Name</label>
                                            <input type="text" class="form-control" id="modalRaceName" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Turn Before</label>
                                            <input type="text" class="form-control" id="modalTurnBefore" value="0">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Goal</label>
                                            <input type="text" class="form-control" id="modalGoal" value="1ST">
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Strategy</label>
                                            <select class="form-select" id="modalStrategy">
                                                <option value="front">Front Runner</option>
                                                <option value="pace">Pace</option>
                                                <option value="late">Late Charge</option>
                                                <option value="end">Endurance</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="card mb-3">
                                    <div class="card-header">Attributes</div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-6 mb-3">
                                                <label class="form-label">SPEED</label>
                                                <input type="number" class="form-control" id="speedValue" value="423">
                                                <div class="mt-1">
                                                    <select class="form-select" id="speedGrade">
                                                        <option value="C">C</option>
                                                        <option value="B">B</option>
                                                        <option value="A">A</option>
                                                        <option value="S">S</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-6 mb-3">
                                                <label class="form-label">STAMINA</label>
                                                <input type="number" class="form-control" id="staminaValue" value="276">
                                                <div class="mt-1">
                                                    <select class="form-select" id="staminaGrade">
                                                        <option value="E">E</option>
                                                        <option value="D">D</option>
                                                        <option value="C">C</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-6 mb-3">
                                                <label class="form-label">POWER</label>
                                                <input type="number" class="form-control" id="powerValue" value="461">
                                                <div class="mt-1">
                                                    <select class="form-select" id="powerGrade">
                                                        <option value="C">C</option>
                                                        <option value="B">B</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-6 mb-3">
                                                <label class="form-label">GUTS</label>
                                                <input type="number" class="form-control" id="gutsValue" value="448">
                                                <div class="mt-1">
                                                    <select class="form-select" id="gutsGrade">
                                                        <option value="C">C</option>
                                                        <option value="B">B</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <label class="form-label">WIT</label>
                                                <input type="number" class="form-control" id="witValue" value="264">
                                                <div class="mt-1">
                                                    <select class="form-select" id="witGrade">
                                                        <option value="E">E</option>
                                                        <option value="D">D</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="card">
                                    <div class="card-header">Status & Conditions</div>
                                    <div class="card-body">
                                        <div class="mb-3">
                                            <label class="form-label">Mood</label>
                                            <select class="form-select" id="modalMood">
                                                <option value="good">Good</option>
                                                <option value="normal">Normal</option>
