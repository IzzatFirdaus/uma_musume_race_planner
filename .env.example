# .env
# ----------------------------------------------------------------
# Environment configuration file for Uma Musume Race Planner
# This file contains all the environment variables required for
# the application's proper functionality.
# ----------------------------------------------------------------

# ----------------------
# APPLICATION SETTINGS
# ----------------------
APP_NAME=UmaMusumeRacePlanner
APP_ENV=production            # Set to 'production', 'development', or 'testing'
APP_DEBUG=false               # Set to 'true' to enable debugging (useful for development)
APP_URL=http://localhost      # Base URL of the application

# ----------------------
# DATABASE CONFIGURATION
# ----------------------
DB_HOST=127.0.0.1             # Database server hostname (force IPv4)
DB_PORT=3306                  # Database server port
DB_NAME=uma_musume_planner    # Name of the database
DB_USER=root                  # Database username
DB_PASS=                      # Database password (leave empty for no password)

# ----------------------
# LOGGING CONFIGURATION
# ----------------------
LOG_CHANNEL=stack             # Logging channel (e.g., "stack", "single", "daily")
LOG_LEVEL=error               # Log level (options: debug, info, warning, error, critical)

# ----------------------
# CACHE CONFIGURATION
# ----------------------
CACHE_DRIVER=file             # Cache driver (options: file, database, redis, etc.)
SESSION_DRIVER=file           # Session driver (options: file, database, redis, etc.)

# ----------------------
# MAIL CONFIGURATION
# ----------------------
MAIL_MAILER=smtp              # Mailer service (e.g., smtp, sendmail)
MAIL_HOST=smtp.mailtrap.io    # SMTP server hostname
MAIL_PORT=2525                # SMTP server port
MAIL_USERNAME=                # SMTP server username
MAIL_PASSWORD=                # SMTP server password
MAIL_ENCRYPTION=null          # Encryption protocol (e.g., tls, ssl, null)
MAIL_FROM_ADDRESS=no-reply@uma-musume.com
MAIL_FROM_NAME="Uma Musume Race Planner"

# ----------------------
# EXTERNAL SERVICES
# ----------------------
# Example: Add API keys or credentials for external integrations here
# EXAMPLE_API_KEY=your_api_key

# ----------------------
# CUSTOM SETTINGS
# ----------------------
LAST_UPDATED=2025-08-04       # Last updated date for application reference
TIMEZONE=UTC                  # Default timezone for the application