// ðŸ”¹ Grade badge class mapping
export function getGradeBadgeClass(value) {
  const gradeMap = {
    // Grades
    "S+": "bg-primary",
    S: "bg-primary",
    "A+": "bg-success",
    A: "bg-success",
    "B+": "bg-info",
    B: "bg-info",
    "C+": "bg-warning text-dark",
    C: "bg-warning text-dark",
    "D+": "bg-orange",
    D: "bg-orange",
    "E+": "bg-danger",
    E: "bg-danger",
    "F+": "bg-dark",
    F: "bg-dark",
    "G+": "bg-secondary",
    G: "bg-secondary",

    // Plan Statuses
    Planning: "bg-warning text-dark",
    Active: "bg-success",
    Finished: "bg-primary",
    Draft: "bg-secondary",
    Abandoned: "bg-danger",
  };

  return gradeMap[value] || "bg-muted";
}

// ðŸ”¸ Prediction Icon Mapping
export function getPredictionIcon(prediction) {
  const iconMap = {
    "â—Ž": "prediction-good",
    "â¦¾": "prediction-good",
    "â—‹": "prediction-good",
    "â–³": "prediction-avg",
    X: "prediction-poor",
    "-": "prediction-secondary",
  };

  const cssClass = iconMap[prediction] || "prediction-secondary";
  return `<span class="fs-4 ${cssClass}">${prediction}</span>`;
}

